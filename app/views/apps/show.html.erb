<div class="app">

  <h1><%= @app_name %></h1>
  <p><a href="<%= @details['web_url'] %>"><%= @details['web_url'] %></a></p>
  <p><%= @details["git_url"] %></p>
  <p><strong>Last Upated:</strong> <%= @details["updated_at"].to_time.in_time_zone("Pacific Time (US & Canada)") %></p>

  <h3 class="app-title">Dynos</h3>
  <ul>
  <% @dynos.each do |dyno| %>
    <li><strong><%= dyno["type"] %></strong>: <%= dyno["quantity"] %> @ <%= dyno["size"] %></li> 
  <% end %>
  </ul>

  <hr />

  <h3 class="app-title">Addons</h3>
  <ul>
  <% @addons.each do |addon| %>
    <li><%= addon["plan"]["name"] %></li> 
  <% end %>
  </ul>

  <hr />

  <h3 class="app-title">Config Vars</h3>
  <p>This is not a complete list. Some config vars are hidden for security or because nobody usually cares about them.</p>
  <ul>
    <% @config_vars.sort.map do |key, val| %>
      <% unless exclude_config_var(key) %>
        <li><strong><%= key %> = </strong> <%= val %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<p><%= link_to "Done", "/", class: "btn" %></p>

<% # Hide this super scary button for now %>

<% if allow_deletion %>
  <br /><br /><br /><br /><br />
  <p><%= link_to 'Delete App',  @app_name,  method: :delete, data: { confirm: "DANGER! Are you sure you want to delete #{@app_name}? This cannot be undone." } %></p>
<% end %>
